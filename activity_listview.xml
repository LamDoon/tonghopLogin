                app:srcCompat="@drawable/ji1" />

            <TextView
                android:id="@+id/ji1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="Day by Day"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/jiye1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ji1_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="3,300 View"
                android:textSize="23sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/jiye1"
                app:layout_constraintTop_toBottomOf="@+id/ji1_title" />

            <Button
                android:id="@+id/ji1_button"
                android:layout_width="96dp"
                android:layout_height="40dp"
                android:layout_marginTop="14dp"
                android:text="Rate"
                android:textSize="18sp"
                android:background="@drawable/custom_buttomview_color"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/jiye1"
                app:layout_constraintTop_toBottomOf="@+id/ji1_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

